<style>
  .wishfull__icon {
    display: flex;
    justify-content: center;
    max-width: 44rem;
  }

  .wishfull__icon button {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    display: flex;
    gap: 0.5rem;
    align-item: center;
  }

  .wishfull__icon--svg {
    width: 2rem;
    height: 2rem;
  }
</style>

<div class="wishfull__icon" x-data="whishfull">
  <button type="button" @click.debounce="addToWishlist()">
    <svg
      class="wishfull__icon--svg"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="#000"
      :fill="wishlisted ? '#000': '#fff' "
    >
      <path d="M12 21.35l-1.45-1.32C5.4 15.73 2 12.27 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.77-3.4 7.23-8.55 11.53L12 21.35z"/>
    </svg>
    {% if block.settings.text != blank %}
      <span class="wshfull__icon-text">{{ block.settings.text }}</span>
    {% endif %}
  </button>
</div>


{% render 'wishlist-script' %}

{% schema %}
{
  "name": "Wishfull extension",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "product",
      "autofill": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "text",
      "default": "wishlisted"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color",
      "default": "#ff0000"
    }
  ]
}
{% endschema %}
